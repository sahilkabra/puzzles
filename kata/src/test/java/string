package string;

import org.junit.jupiter.api.Test;
import org.junit.jupiter.api.DisplayName;
import static org.junit.jupiter.api.Assertions.assertEquals;

@DisplayName("Reverse String N times")
public class ReverseStringNTimesTest {
  @Test
  @DisplayName("reverse 0 times")
  public void testFor0() {
    assertEquals("string", ReverseStringNTimes.reverse("string", 0));
  }
  @Test
  @DisplayName("reverse 1 times")
  public void testFor1() {
    assertEquals("gsntir", ReverseStringNTimes.reverse("string", 1));
  }
  @Test
  @DisplayName("reverse 3 times")
  public void testFor3() {
    assertEquals("nrtgsi", ReverseStringNTimes.reverse("string", 3));
  }
}
